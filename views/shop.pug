extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    if products.length > 0
        .grid
            each product in products
                article.card.product-item
                    header.card__header
                        h1.product__title #{product.title}
                    .card__image
                        img(src="", alt="zxc")
                    .card__content
                        h2.product__price 19
                        p.product__description sdasdas
                    .card__actions
                        btn.btn Add to cart
    else
        h1 No products