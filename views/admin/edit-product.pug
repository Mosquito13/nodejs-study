extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/forms.css")
    link(rel="stylesheet", href="/css/product.css")

block content
    - var formAction = edit ? 'edit-product' : 'add-product';
    - var buttonSendText = edit ? 'Update' : 'Add';

    form.product-form(action="/admin/" + formAction, method="POST", autocomplete="off")
        if edit
            input(type="hidden", name="id", value=(edit ? product._id : ''))#id
        .form-control
            label(for="title") Title
            input(type="text", name="title", value=(edit ? product.title : ''))#title
        .form-control
            label(for="imageUrl") Image URL
            input(type="text", name="imageUrl", value=(edit ? product.imageUrl : ''))#imageUrl
        .form-control
            label(for="price") Price
            input(type="number", name="price", step="0.01", value=(edit ? product.price : ''))#price
        .form-control
            label(for="description") Description
            textarea(name="description", rows="5") #{(edit ? product.description : '')}
        input(type="hidden", name="_csrf", value=csrfToken)
        button.btn(type="submit") #{buttonSendText}