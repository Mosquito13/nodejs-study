extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/cart.css")

block content
    if cartProducts.length > 0
        ul.cart__item-list
            each cartProduct in cartProducts
                li.cart__item
                    h1 #{cartProduct.productId.title}
                    h2 Quantity: #{cartProduct.quantity}
                    form(action="/cart-delete-product", method="POST")
                        input(type="hidden", name="productId", value=cartProduct.productId._id)#productId
                        input(type="hidden", name="_csrf", value=csrfToken)
                        button.btn.danger(type="submit") Delete
        div.centered
            hr
            form(action="/create-order", method="POST")
                input(type="hidden", name="_csrf", value=csrfToken)
                button.btn(type="submit") Order Now!
    else
        h1 No products in cart!