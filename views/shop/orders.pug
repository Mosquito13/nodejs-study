extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/orders.css")

block content
    if orders.length > 0
        ul.orders
            each order in orders
                li.orders__item
                    h1 Order - # #{order._id}
                    ul.orders__products
                        each orderProduct in order.products
                            li.orders__products-item #{orderProduct.product.title} (#{orderProduct.quantity})
    else
        h1 No orders