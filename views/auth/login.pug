extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/auth.css")
    link(rel="stylesheet", href="/css/forms.css")

block content
    form.login-form(action="/login", method="POST", novalidate)
        .form-control
            label(for="email") E-mail
            input(type="email", name="email", value=(formValues && formValues.email), class=(hasErrorByField("email") ? "invalid" : ""))#email
        .form-control
            label(for="password") Password
            input(type="password", name="password", value=(formValues && formValues.password), class=(hasErrorByField("password") ? "invalid" : ""))#password
        input(type="hidden", name="_csrf", value=csrfToken)
        button.btn(type="submit") Login
    .centered
        a(href="/reset") Reset password